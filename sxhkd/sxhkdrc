#
# wm independent hotkeys
#

# terminal emulator
super + Return
	kitty

# web browser
super + w
    firefox

# program launcher
super + d
	rofi -show drun

# file browser
super +f
	thunar

# power menu
super + p
    ~/.config/rofi/scripts/powermenu.sh

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# screen brightness
XF86MonBrightnessDown
	bringtnessctl set 2%-

XF86MonBrightnessUp
	brightnessctl set 2%+

# volume
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +2%

XF86AudioLowerVolume     
        pactl set-sink-volume @DEFAULT_SINK@ -2%

XF86AudioMute     
        pactl set-sink-mute @DEFAULT_SINK@ toggle
#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + q
	bspc node -c

# Pencereler arası gezinme
super + {Left,Up,Down,Right}
    bspc node -f {west,north,south,east}

super + {h,j,k,l}
    bspc node -f {west,north,south,east}

# Pencere taşıma
super + shift + {Left,Up,Down,Right}
    bspc node -s {west,north,south,east}

super + shift + {h,j,k,l}
    bspc node -s {west,north,south,east}

# Masaüstü geçişi (odak değiştir)
super + {1,2,3,4,5}
    bspc desktop -f ^{1,2,3,4,5}

# Pencereyi belirli masaüstüne taşı
super + shift + {1,2,3,4,5}
    bspc node -d ^{1,2,3,4,5}

# Layout değiştirme
super + shift + space
    bspc desktop -l next

# Floating/Tiled Değiştirme
super + space
    bspc node -t ~floating

# Fullscreen
super + shift + f
    bspc node -t ~fullscreen

# Monocle Layout Pencere Değiştirme
Page_Up
    bspc node -f next
Page_Down
    bspc node -f prev
